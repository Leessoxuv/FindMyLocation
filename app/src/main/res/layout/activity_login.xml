<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fml_login"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/fml_login"
        android:clipToOutline="true"
        tools:ignore="MissingConstraints,RedundantNamespace,UnusedAttribute"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="253dp"
            android:layout_height="194dp"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="75dp"
            android:src="@drawable/fml_logo_b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="115dp" />

        <EditText
            android:id="@+id/Et_Loginemail"
            android:layout_width="236dp"
            android:layout_height="42dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="89dp"
            android:hint="Email를 입력하세요."
            android:textColorHint="@color/black"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView1" />

        <EditText
            android:id="@+id/Et_Loginpw"
            android:layout_width="236dp"
            android:layout_height="42dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="89dp"
            android:hint="password를 입력하세요."
            android:textColorHint="@color/black"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Et_Loginemail" />

        <Button
            android:id="@+id/Btn_login"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="243dp"
            android:layout_height="36dp"
            android:layout_marginStart="89dp"
            android:layout_marginEnd="84dp"
            android:background="@drawable/btn"
            android:text="로그인"
            android:textColor="@color/btn_font"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="430dp" />

        <Button
            android:id="@+id/Btn_join"
            android:layout_width="243dp"
            android:layout_height="36dp"
            android:layout_marginStart="86dp"
            android:layout_marginEnd="82dp"
            android:layout_marginBottom="212dp"
            android:background="@drawable/btn"
            android:text="회원 가입"
            android:textColor="@color/btn_font"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>